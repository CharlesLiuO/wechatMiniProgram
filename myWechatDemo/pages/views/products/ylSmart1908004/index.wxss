}
.tabs{
    display: flex;
    width: 100%;
    height:100rpx;
    background: #fff;
    border-bottom: 1rpx solid #ddd;
    justify-content: space-between;
    padding: 0 60rpx;
}
.tab_btn{
    text-align: center;
    padding:30rpx 45rpx 10rpx 45rpx;
    margin-right:20rpx;
    border:1rpx solid #ddd;
}
.tab_btn_act{
    border-bottom: 4rpx solid #00f;
}
.slide{
    flex: 1;
    border: 4rpx solid rgb(219, 4, 4);
    padding: 10rpx;
}
.slide_item{
    width: 100%;
    height: 100%;
}
.scroll_box{
    width: 100%;
    height: auto;
    border: 2rpx solid rgb(0, 0, 0);
    padding: 10rpx;
}